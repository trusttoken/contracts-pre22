{
  "name": "truecoin",
  "version": "1.0.0",
  "description": "",
  "main": "truffle.js",
  "directories": {
    "test": "./test.sh"
  },
  "scripts": {
    "coverage": "./coverage.sh",
    "flatten": "./flatten-all",
    "profile": "./profile.sh",
    "clean": "rm -rf ./build",
    "typecheck": "tsc --noEmit",
    "lint:sol": "solium --no-soliumignore -d contracts/",
    "lint:js": "eslint '{test,scripts}/**/*.js'",
    "lint:ts": "eslint '{test,scripts}/**/*.ts' -c .eslintrc.typescript.js",
    "lint": "yarn lint:ts && yarn lint:js && yarn lint:sol",
    "build:sol": "waffle .waffle.json",
    "build:vy": "bash ./compileUniswap.sh",
    "build": "yarn clean && yarn build:vy && yarn build:sol && sh indexBuild.sh",
    "test:js": "./test.sh",
    "test:ts": "yarn build && mocha -r ts-node/register 'test/**/*.test.ts'",
    "test": "yarn test:ts && yarn test:js",
    "checks": "yarn lint && yarn typecheck && yarn test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "babel-eslint": "^10.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.18.0",
    "babel-preset-stage-3": "^6.17.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "ethereum-waffle": "^2.4.1",
    "mocha": "^7.1.1",
    "solidity-coverage": "^0.7.0",
    "solium": "^1.2.5",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@trusttoken/registry": "0.1.2",
    "@trusttoken/trusttokens": "0.1.4",
    "ethers": "^4.0.46",
    "ganache-cli": "6.8.1",
    "ganache-time-traveler": "^1.0.14",
    "openzeppelin-solidity": "^2.4.0",
    "truffle": "5.1.11",
    "truffle-hdwallet-provider": "0.0.3",
    "web3": "1.2.4",
    "wjm-airswap-swap": "^5.0.1"
  }
